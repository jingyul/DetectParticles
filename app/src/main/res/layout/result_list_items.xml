<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_star_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/list_item_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_star_text_view"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/list_item_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_title_text_view"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/list_item_reference_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_date_text_view"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/list_item_comments_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_reference_text_view"
        android:textStyle="bold"
        android:padding="8dp"/>


</RelativeLayout>